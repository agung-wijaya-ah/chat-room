<div class="my-3 mx-2">
  <%= link_to new_room_path, class: 'btn btn-primary btn-block' do %>
    Create a room
  <% end %>
</div>

<% if @rooms.present? %>
  <nav class="room-list top-border-grey">
    <% @rooms.each do |room| %>
      <%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
    <% end %>
  </nav>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>