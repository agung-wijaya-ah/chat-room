

<div class="row">
  <div class="col-12 col-md-3 nopadding border-grey">
    <%= render partial: 'rooms' %>
  </div>

  <div class="col nopadding">
    <div class="border-grey px-3 py-1">
      <h1>
        <%= @room.name %>
      </h1>
    </div>
  
    <div class="chat border-grey p-3" data-channel-subscribe="room" data-room-id="<%= @room.id %>">

    </div>
    <div class="border-grey container pt-3 pb-1">
    <%= simple_form_for @room_message, remote: true do |form| %>
      <div class="input-group mb-3">
        <%= form.input :message, as: :string,
                                 wrapper: false,
                                 label: false,
                                 input_html: {
                                   class: 'chat-input'
                                 } %>
        <div class="input-group-append">
          <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
        </div>
      </div>
      <%= form.input :room_id, as: :hidden %>
    <% end %>
    </div>
  </div>
</div>
<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">
      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text">

          </p>

          <div class="text-right">
            <small data-role="message-date">
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>